{
  "name": "natours",
  "version": "1.0.0",
  "description": "Learning node, express and mongoDB",
  "main": "app.js",
  "targets": {
    "main": false
  },
  "scripts": {
    "start": "node server.js --ignore client",
    "dev": "nodemon server.js --ignore client",
    "start:prod": "NODE_ENV=production nodemon server.js",
    "debug": "ndb server.js",
    "watch:js": "parcel watch --no-hmr ./public/js/index.js --dist-dir ./public/js/bundled",
    "build:js": "parcel build ./public/js/index.js --dist-dir ./public/js/bundled",
    "client": "npm start --prefix client",
    "full": "concurrently --kill-others-on-fail \"npm run dev\" \" npm run client\"",
    "build-client": "cd client && npm run build",
    "setup-production": "npm run install-client && npm run build-client && npm install",
    "install-client": "cd client && npm install"
  },
  "author": "Emma Han",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.5.2",
    "helmet": "^6.0.0",
    "hpp": "^0.2.3",
    "html-to-text": "^8.2.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.15",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.7.8",
    "pug": "^3.0.2",
    "sharp": "^0.30.6",
    "slugify": "^1.6.5",
    "stripe": "^9.6.0",
    "validator": "^13.7.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "buffer": "^6.0.3",
    "concurrently": "^7.5.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^4.6.0",
    "ndb": "^1.1.5",
    "parcel": "^2.6.0",
    "prettier": "^1.17.0",
    "process": "^0.11.10"
  },
  "engines": {
    "node": "^16"
  }
}
